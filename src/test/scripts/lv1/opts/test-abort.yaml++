---
"$extends":
  - base/normal.json
when:
  description:
    - Call 'abort' function.
  source:
    - ${BUD_LIB}/opts.rc
  cmd: abort
  args:
    - HELLO ABORT
then:
  description:
    - Make sure the command exit with non-zero.
  exitCode:
    - NOT_EQUAL
    - 0
  stdout:
    absent:
      - REGEX:.+
  stderr:
    present:
      - REGEX:HELLO ABORT
