---
"$extends":
  - base/normal.json
when:
  description:
    - Run 'join_by' with a delimiter '-' and an array (A, B, C).
  source:
    - ${BUD_LIB}/arrays.rc
  cmd: join_by
  args:
    - -
    - A
    - B
then:
  exitCode:
    - EQUAL
    - 0
  stdout:
    present:
      - RAW:A-B
  stderr:
    absent:
      - REGEX:.+
